[build]
./configure --prefix=/
echo "#include <limits.h>" >>config.h
sed -i 's/!strcmp(__progname, "pstree.x11")/0/' src/pstree.c
sed -i '/__progname/d' src/pstree.c
make
make DESTDIR=$R install
rm $R/bin/pstree.x11
